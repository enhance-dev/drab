{
	"include": ["src/package/**/*"],
	"exclude": ["**/*.test.ts"],
	"compilerOptions": {
		"rootDir": "src/package",
		"outDir": "package",
		"esModuleInterop": true,
		"target": "ESNext",
		"moduleResolution": "Node",
		"module": "ESNext",
		"declaration": true,
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noUncheckedIndexedAccess": true,
		"noFallthroughCasesInSwitch": true,

		"lib": ["ESNext", "DOM", "DOM.Iterable"]
	}
}
